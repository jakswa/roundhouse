{% extends "layout.html.askama" %}

{% block content %}
<h1 class="px-2 py-3">Stations</h1>

<ul>
{% for station in stations %}
	<li class="flex items-center">
		<span class="capitalize">{{station.station_name()}}</span>
		<ul>
		{% for arrival in station.arrivals %}
			<li>({{arrival.destination}}) {{ arrival.direction }} in {{ arrival.waiting_seconds }}</li>
		{% endfor %}
		</ul>
	</li>
{% endfor %}
</ul>
{% endblock %}
